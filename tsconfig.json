{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "module": "system",
        "outDir": "./dist/",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "outFile": "dist/index.js",
        "sourceMap": true
    },
    "typeRoots": [
        "node_modules/@types"
    ],
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}